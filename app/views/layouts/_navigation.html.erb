<% subjects ||= [] %>
<ul>
	<% subjects.each do |subject| %>
	<li>
		<%= subject.name %>
		<ul>
			<% subject.pages.visible.sorted.each do |page| %>
			<li><%= link_to_unless_current(page.name, :action => 'show', :sbj_id => page.subject_id, :plink => page.permalink) %></li>
			<% end %>
		</ul>
	</li>
	<% end %>
</ul>
